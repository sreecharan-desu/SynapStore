# =====================================================
# Core Application
# =====================================================

PORT=3000
JWT_SECURITY_KEY=your_jwt_security_key_here

# =====================================================
# Database (PostgreSQL / Neon / RDS etc.)
# =====================================================

DATABASE_URL=postgresql://username:password@host:5432/database_name?sslmode=require

# =====================================================
# Encryption / Security
# =====================================================

# Base64-encoded data encryption key
DATA_KEY_B64=base64_encoded_data_key_here

# =====================================================
# Redis (Queues / Notifications / Jobs)
# =====================================================

REDIS_URL=rediss://default:redis_password@redis_host:6379

# =====================================================
# Email (Nodemailer - SMTP)
# Gmail App Password example
# =====================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_app_password_here
EMAIL_FROM="YourApp <noreply@example.com>"

# =====================================================
# Google OAuth
# =====================================================

GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# =====================================================
# OTP Configuration
# =====================================================

OTP_LENGTH=6
OTP_EXPIRES_MINUTES=10

# =====================================================
# Admin Bootstrap Credentials
# (Used for first-time system setup only)
# =====================================================

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong_admin_password_here

# =====================================================
# External Services
# =====================================================

NOTIFICATION_SERVICE_URL=https://notification-service-synapstore.vercel.app

# =====================================================
# Frontend & Backend URLs
# =====================================================

# Local Development
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Production (override in hosting platform)
# FRONTEND_URL=https://your-frontend-domain.com
# BACKEND_URL=https://your-backend-domain.com

# =====================================================
# Inventory & Stock Monitoring
# =====================================================

STOCK_ALERT_INTERVAL=72000
EXPIRY_THRESHOLD_DAYS=30
LOW_STOCK_THRESHOLD_QTY=15

# =====================================================
# Cloudflare (Turnstile / Bot Protection / Firewall)
# =====================================================

CLOUDFLARE_SECRET_KEY=your_cloudflare_secret_key_here

# =====================================================
# PayU Payment Gateway
# =====================================================

PAYU_MERCHANT_KEY=your_payu_merchant_key_here
PAYU_SALT=your_payu_salt_here

# Base URL
# Use https://test.payu.in for Sandbox / Testing
# Use https://secure.payu.in for Production
PAYU_BASE_URL=https://test.payu.in
